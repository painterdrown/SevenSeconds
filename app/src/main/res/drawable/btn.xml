<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_focused="true">
    <layer-list>
        <item
            android:left="4.0dip"
            android:top="4.0dip">
            <shape>
                <solid android:color="#fafaf2"/>
                <corners android:radius="5.0dip"/>
            </shape>
        </item>
    </layer-list>
</item>
<item
    android:state_pressed="true">
    <layer-list>
        <item
            android:left="4.0dip"
            android:top="4.0dip">
            <shape>
                <solid android:color="#fafaf2"/>
                <corners android:radius="5.0dip"/>
            </shape>
        </item>
    </layer-list>
</item>
<item>
    <layer-list>
        <item android:left="4dip" android:top="4.0dip">
            <shape>
                <gradient
                    android:angle="90"
                    android:endColor="@android:color/transparent"
                    android:startColor="#d2d2d2"
                    android:type="linear" />
                <corners android:radius="5.0dip"/>
            </shape>
        </item>
        <item android:bottom="4.0dip" android:right="4.0dip">
            <shape>
                <solid android:color="#fafaf2"/>
                <corners android:radius="5.0dip"/>
            </shape>
        </item>
    </layer-list>
</item>
</selector>